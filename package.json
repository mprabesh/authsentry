{
  "name": "auth-helper-advanced",
  "version": "1.0.0",
  "description": "A comprehensive authentication and authorization package for Node.js/Express applications with JWT tokens, refresh tokens, and Role-Based Access Control (RBAC)",
  "main": "index.js",
  "keywords": [
    "authentication",
    "authorization", 
    "jwt",
    "rbac",
    "express",
    "middleware",
    "refresh-token",
    "bcrypt",
    "mongoose"
  ],
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=integration"
  },
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/auth-helper-advanced.git"
  },
  "homepage": "https://github.com/yourusername/auth-helper-advanced#readme",
  "bugs": {
    "url": "https://github.com/yourusername/auth-helper-advanced/issues"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.0"
  },
  "peerDependencies": {
    "express": "^4.18.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "express": "^4.18.2",
    "mongodb-memory-server": "^9.1.1"
  },
  "files": [
    "index.js",
    "auth.js", 
    "db.js",
    "middleware.js",
    "permissions.js",
    "models/",
    "README.md"
  ],
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "*.js",
      "models/*.js",
      "!node_modules/**",
      "!coverage/**"
    ],
    "testTimeout": 10000
  }
